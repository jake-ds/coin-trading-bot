# ===========================================
# Crypto Trading Bot - Environment Variables
# ===========================================
# Copy this file to .env and fill in your values
# NEVER commit .env to version control

# Trading Mode: "paper" (default) or "live"
TRADING_MODE=paper

# ---- Binance ----
BINANCE_API_KEY=
BINANCE_SECRET_KEY=
BINANCE_TESTNET=true

# ---- Upbit ----
UPBIT_API_KEY=
UPBIT_SECRET_KEY=

# ---- Database ----
DATABASE_URL=sqlite+aiosqlite:///data/trading.db

# ---- Telegram Alerts ----
TELEGRAM_BOT_TOKEN=
TELEGRAM_CHAT_ID=

# ---- Risk Management ----
MAX_POSITION_SIZE_PCT=10
DAILY_LOSS_LIMIT_PCT=5
MAX_DRAWDOWN_PCT=15

# ---- Logging ----
LOG_LEVEL=INFO
